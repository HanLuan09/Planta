<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/circle_img_myplanta"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/MyShapeAppearanceOverlay"
        app:srcCompat="@drawable/plant_img" />

    <LinearLayout
        android:id="@+id/layout_myplanta"
        android:layout_toEndOf="@id/circle_img_myplanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_name_myplanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/tiktok_bold"
            android:text="Hoa hướng dương"/>

        <TextView
            android:id="@+id/tv_title_myplanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="Tưới nước vào ngày 20 tháng 2"/>

    </LinearLayout>

</RelativeLayout>