<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:background="#CFEA81"
    android:paddingEnd="15dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_name"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_expand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/layout_title_name_myplanta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_title_name_myplanta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tiktok_bold"
                        android:paddingVertical="10dp"
                        android:text="Mô tả"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content_name_myplanta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_name_myplanta"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/edDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mô tả"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_name1"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_expand_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/layout_title_name_myplanta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_title_name_myplanta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tiktok_bold"
                        android:paddingVertical="10dp"
                        android:text="Số Hoa"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content_name_myplanta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_name_myplanta"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/edFlower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số hoa"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_name2"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_expand_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/layout_title_name_myplanta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_title_name_myplanta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tiktok_bold"
                        android:paddingVertical="10dp"
                        android:text="Số Quả"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content_name_myplanta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_name_myplanta"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/edFruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số quả"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_name3"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_expand_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/layout_title_name_myplanta3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_title_name_myplanta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tiktok_bold"
                        android:paddingVertical="10dp"
                        android:text="Chiều Cao"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content_name_myplanta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_name_myplanta"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp">

            <EditText
                android:id="@+id/edHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập chiều cao"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_growndate"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/layout_expand_growndate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <LinearLayout
                    android:id="@+id/layout_title_growndate_myplanta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_title_growndate_myplanta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/tiktok_bold"
                        android:text="Ngày"
                        android:paddingVertical="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/tvSelectedDate1"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_calendar"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_content_growndate_myplanta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title_growndate_myplanta"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập ngày"
                android:paddingVertical="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounder_background"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10">

                    <LinearLayout
                        android:id="@+id/layout_image_myplanta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/tv_title_image_myplanta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/tiktok_bold"
                            android:paddingVertical="10dp"
                            android:text="Ảnh thực vật"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/btnCapture"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_image"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/surfaceView"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginVertical="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_no_image"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
